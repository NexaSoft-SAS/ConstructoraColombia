---
import type { Project } from "@/consts/projects"

interface Props {
	title: string
	value: Project[]
}

const { title, value } = Astro.props
---

<div class="flex justify-center text-primary">
	<div
		class="flex w-full items-start justify-between pl-2.5 pr-2.5 pt-2 text-center md:flex-col md:items-center"
	>
		<h4>{title}</h4>
		<div>
			{
				value.map((item, index) => (
					<>
						<span
							class:list={"text-xl font-bold hover:underline"}
							id="project-weight"
							title={`Valor presente del proyecto ${item.name}`}
						>
							{item.price}
						</span>
						{index !== value.length - 1 && <span class="text-xl font-bold text-accent"> / </span>}
					</>
				))
			}
		</div>
	</div>
</div>
